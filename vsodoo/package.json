{
	"name": "vsodoo",
	"displayName": "vsodoo",
	"publisher": "Block-Cat",
	"description": "vscode extension for odoo development.",
	"icon": "vsodoo.png",
	"repository": {"type": "git","url": "https://github.com/block-cat/vsodoo"},
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:__manifest__.py",
		"onCommand:extension.odoo"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.odoo",
				"title": "Odoo Test"
			}
		],
		"snippets": [
			{
				"language": "python",
				"path": "./snippets/manifest.json"
			},
			{
				"language": "python",
				"path": "./snippets/model.json"
			},
			{
				"language": "python",
				"path": "./snippets/function.json"
			},
			{
				"language": "xml",
				"path": "./snippets/xml.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.4.5",
		"vscode": "^1.1.28"
	}
}
